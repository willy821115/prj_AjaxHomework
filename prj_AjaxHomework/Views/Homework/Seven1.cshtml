
@{
    ViewData["Title"] = "Seven1";
}

<h1>Seven1</h1>

<table id="empTable" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>姓名</th>
            <th>年資</th>
            <th>薪水</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            const emp = {
                "employees": [
                    { "name": "Tom", "workYears": 3, "salary": 35000 },
                    { "name": "Jack", "workYears": 5, "salary": 40000 },
                    { "name": "Mary", "workYears": 7, "salary": 45000 }
                ]
            };

            const tbody = $('#empTable>tbody');

            emp.employees.forEach(employee => {
                const { name, workYears, salary } = employee;
                const row = $('<tr>').append(
                    $('<td>').text(name),
                    $('<td>').text(workYears),
                    $('<td>').text(salary)
                );
                tbody.append(row);
            });
        });

    </script>
         

}

